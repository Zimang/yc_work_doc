<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Blurred background with gradient -->
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:endColor="#05000000"
                android:startColor="#05706DFF"
                android:type="linear" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Semi-transparent overlay for blur effect -->
    <item>
        <shape>
            <solid android:color="#05706DFF" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Inner border -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp">
        <shape>
            <stroke
                android:dashWidth="1dp"
                android:color="#05706DFF" />
            <gradient
                android:angle="180"
                android:endColor="#05706DFF"
                android:startColor="#15706DFF"
                android:type="linear" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>